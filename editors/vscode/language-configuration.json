{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(fn|if|elif|else|for|while|struct).*:\\s*$",
        "decreaseIndentPattern": "^\\s*(elif|else)\\b"
    },
    "folding": {
        "offSide": true
    }
}
